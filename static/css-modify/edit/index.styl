#loading
	background: url("/moment/static/image/299.gif") no-repeat
	background-color: rgba(0, 0, 0, 0.8)
	background-position: center
	background-size: auto
	position: absolute
	width: 100%
	height: 100%
	z-index: 100000

@-webkit-keyframes rotate-and-down-left
	0%
		-webkit-transform: rotate(0deg)
	20%
		-webkit-transform: rotate(15deg) translateY(0)
	100%
		-webkit-transform: rotate(15deg) translateY(2.5rem)

@-webkit-keyframes rotate-and-down
	0%
		-webkit-transform: rotate(0deg) translateY(0)
	20%
		-webkit-transform: rotate(-15deg) translateY(0)
	100%
		-webkit-transform: rotate(-15deg) translateY(2.6rem)

@-webkit-keyframes go-out
	0%
		-webkit-transform: rotate(-33deg) translateY(0)
	100%
		-webkit-transform: translateY(-3rem)

@-webkit-keyframes go-out-left
	0%
		-webkit-transform: rotate(33deg) translateY(0)
	100%
		-webkit-transform: translateY(3rem)

@-webkit-keyframes pull-out
	0%
		-webkit-transform: translateX(226px)
	100%
		-webkit-transform: translateX(0)

@-webkit-keyframes rotate
	0%
		-webkit-transform: rotate(0deg)
	10%
		-webkit-transform: rotate(-75deg)
	20%
		-webkit-transform: rotate(-16deg)
	30%
		-webkit-transform: rotate(-72deg)
	40%
		-webkit-transform: rotate(-20deg)
	50%
		-webkit-transform: rotate(-68deg)
	60%
		-webkit-transform: rotate(-24deg)
	70%
		-webkit-transform: rotate(-60deg)
	80%
		-webkit-transform: rotate(-33deg)
	90%
		-webkit-transform: rotate(-50deg)
	100%
		-webkit-transform: rotate(-45deg)

@-webkit-keyframes down
	0%
		-webkit-transform: translateY(0) rotate(-45deg)
	100%
		-webkit-transform: translateY(2rem) rotate(-45deg)

@-webkit-keyframes pointer
	0%, 100%
		opacity: 0
	50%
		opacity: 1

@-webkit-keyframes shake
	0%, 100%

		opacity: .9

	50%
		opacity: 0

@-webkit-keyframes left-one
	0%
		-webkit-transform: translateX(1rem)
	100%
		-webkit-transform: translateX(-1rem)

@-webkit-keyframes left-two
	0%
		-webkit-transform: translateX(1rem)
	100%
		-webkit-transform: translateX(-1rem)

@-webkit-keyframes bigger
	0%
		-webkit-transform : scale(1)

	100%
		-webkit-transform : scale(50)
@-webkit-keyframes scale-little
	0%
		-webkit-transform :scale(1)
	100%
		-webkit-transform:scale(0)
animation(time, name, delay)
	-webkit-animation-duration: time
	-webkit-animation-name: name
	-webkit-backface-visibility: hidden
	-webkit-animation-timing-function: ease
	-webkit-animation-fill-mode: both
	-webkit-animation-delay: delay

*
	-webkit-user-select: none
	-ms-user-select: none
	-moz-user-select: none
	-khtml-user-select: none
	user-select: none
	-webkit-touch-callout: none
	-webkit-tap-highlight-color: transparent

background(image)
	height: 100%
	width: 100%
	position: relative
	background-image: url('/moment/static/image/' + image)
	background-repeat: no-repeat
	background-position: bottom center
	background-size: 100% 100%
	z-index: 1

image-wauto(image)
	background-image: url('/moment/static/image/' + image)
	background-repeat: no-repeat
	background-position: top center
	background-size: 100% auto

image-hauto(image)
	background-image: url('/moment/static/image/' + image)
	background-repeat: no-repeat
	background-position: top center
	background-size: auto 100%

image-fit(image)
	background-image: url('/moment/static/image/' + image)
	background-repeat: no-repeat
	background-position: top center
	background-size: 100% 100%

.up
